<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"bg-info text-light btn btn-outline-secondary btn-block" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"bg-success text-light btn btn-outline-secondary btn-block" %>
<% end %>