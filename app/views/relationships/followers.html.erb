<h2>Follower Users</h2>
<% if @users.exists? %>
<main>
  <p id="notice"></p>
  <div class='container px-3 px-sm-0'>
   <div class='row'>
     <table class='table'>
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
       <tr>
        <td><%= attachment_image_tag user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
   </div>
  </div>
</main>
<% else %>
  <p>ユーザーはいません</p>
<% end %>