 <main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <%= render 'books/list', book: @books %>
    <div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td><%= attachment_image_tag @user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= @user.name %></td>
        <td><%= link_to "Show", user_path(current_user.id) %></td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
  </div>
</main>