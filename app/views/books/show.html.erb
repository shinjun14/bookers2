
<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <table class='table'>
        <tr><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
        </tr>
      </table>

     <div class='row'>

     </div>
     <h1>New Book</h1>
     <%= form_with model: @book, url:'/books', local:true do |f| %>
     <div class="form-group">
      <label for='book_title'>Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
     </div>
     <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
     </div>
     <div class="form-group">
      <input type="submit" name"commit" value="Create Book" class="btn btn-success" data-disable="Create Book" />
     </div>
     <% end %>
    </div>

     <div class='col-md8 offset-md-1'>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       </tbody>
      </table>
     </div>

   </div>
  </div>
</main>